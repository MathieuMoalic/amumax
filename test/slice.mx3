/*
	Test basic slice operations.
*/

setgridsize(1, 1, 1)
setcellsize(1, 1, 1)

a := NewSlice(1, 10, 4, 2)
a.set(0, 0, 0, 0, 0)
a.set(0, 1, 0, 0, 100)
a.set(0, 0, 1, 0, 10)
a.set(0, 0, 0, 1, 1)
a.set(0, 2, 3, 1, 231)
print(a)
expect("1,0,0", a.get(0, 1, 0, 0), 100, 0)
expect("0,1,0", a.get(0, 0, 1, 0),  10, 0)
expect("0,0,1", a.get(0, 0, 0, 1),   1, 0)
expect("2,3,1", a.get(0, 2, 3, 1), 231, 0)

